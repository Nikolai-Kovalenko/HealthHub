@page
@model LoginModel

<div class="row form-group">
    <div class="col-8 offset-2">
        <div class="card">
            <div class="card-body px-lg-5 pt-4">
                <h1 class="h3 mb-3 font-weight-normal text-info pt-4" style="text-align: center;">Sign In</h1>
                <form id="account" method="post" class="form-signin">
                    @if (Model.ExternalLogins?.Count > 0)
                    {
                        <p style="text-align: center;">OR</p>
                    }

                    <div class="form-label-group">
                        <input asp-for="Input.Email" placeholder="Email..." type="email" class="mb-1 form-control" />
                        <label for="inputEmail">Email</label>
                    </div>

                    <div class="form-label-group">
                        <input asp-for="Input.Password" placeholder="Password..." type="password" class="form-control" />
                        <label for="inputPassword">Password</label>
                    </div>

                    <div class="row">
                        <button type="submit" class="btn btn-success btn-block mt-3"><i class="fas fa-sign-in-alt"></i> Log in</button>

                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-info">Forgot your password?</a>

                        <div asp-validation-summary="All" class="text-danger mt-2"></div>

                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-info text-white btn-block mt-3 float-right">Register as a new user</a>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model HealthHub.Models.ViewModel.DoctorProfileVM

@{
    string title = "Create Profile";
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <div class="border p-3 bg-black">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        @{
            if (Model.doctorProfileDTO != null)
            {
                title = "Update Profile";
                <input asp-for="@Model.doctorProfileDTO.Id" hidden />
            }
        }

        <input asp-for="appUserDTO.Id" hidden />
        <input asp-for="doctorProfileDTO.Id" hidden />

        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                @if (Model.doctorProfileDTO == null)
                {
                    <div class="form-group row py-2">
                        <div class="col-4">
                            <label asp-for="@Model.appUserDTO.Name"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="@Model.appUserDTO.Name" class="form-control" disabled />
                            <span asp-validation-for="@Model.appUserDTO.Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row py-2">
                        <div class="col-4">
                            <label asp-for="@Model.appUserDTO.Surname"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="@Model.appUserDTO.Surname" class="form-control" disabled />
                            <span asp-validation-for="@Model.appUserDTO.Surname" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row py-2">
                        <div class="col-4">
                            <label asp-for="@Model.appUserDTO.Email"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="@Model.appUserDTO.Email" class="form-control" disabled />
                            <span asp-validation-for="@Model.appUserDTO.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row py-2">
                        <div class="col-4">
                            <label asp-for="@Model.appUserDTO.Birthday"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="@Model.appUserDTO.Birthday" class="form-control" type="date" disabled />
                            <span asp-validation-for="@Model.appUserDTO.Birthday" class="text-danger"></span>
                        </div>
                    </div>
                }
                else
                {
                    <div class="form-group row py-2">
                        <div class="col-4">
                            <label asp-for="@Model.appUserDTO.Name"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="@Model.appUserDTO.Name" class="form-control" />
                            <span asp-validation-for="@Model.appUserDTO.Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row py-2">
                        <div class="col-4">
                            <label asp-for="@Model.appUserDTO.Surname"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="@Model.appUserDTO.Surname" class="form-control" />
                            <span asp-validation-for="@Model.appUserDTO.Surname" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row py-2">
                        <div class="col-4">
                            <label asp-for="@Model.appUserDTO.Email"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="@Model.appUserDTO.Email" class="form-control" />
                            <span asp-validation-for="@Model.appUserDTO.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row py-2">
                        <div class="col-4">
                            <label asp-for="@Model.appUserDTO.Birthday"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="@Model.appUserDTO.Birthday" class="form-control" type="date" />
                            <span asp-validation-for="@Model.appUserDTO.Birthday" class="text-danger"></span>
                        </div>
                    </div>
                }
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="@Model.doctorProfileDTO.Desc"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="@Model.doctorProfileDTO.Desc" class="form-control"></textarea>
                        <span asp-validation-for="@Model.doctorProfileDTO.Desc" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="@Model.doctorProfileDTO.PathToPhoto"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.doctorProfileDTO.PathToPhoto"  type="file" name="files" id="uploadBox" multiple class="form-control" />
                        <span asp-validation-for="@Model.doctorProfileDTO.PathToPhoto" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            @{
                                if (Model != null)
                                // Update
                                {
                                    <input type="submit" class="btn btn-success w-100" value="Update" />
                                }
                                else
                                // Create
                                {
                                    <input type="submit" class="btn btn-success w-100" value="Create" />
                                }
                            }
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info w-100"><i class="fas fa-sign-out-alt"></i>  &nbsp; Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @if (Model.doctorProfileDTO != null)
                {
                    <img src="@WC.ImagePath@Model.doctorProfileDTO.PathToPhoto" width="100%" style="border-radius:5px; border:1px solid #bbb" />
                }
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
@model HealthHub.Models.ViewModel.DoctorProfileVM


<div class="conteiner p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Doctor info</h1>
        </div>
        @if (Model.doctorProfileDTO != null)
        {
            <div class="col text-end pt-1">
                <a asp-controller="Doctor" asp-action="Upsert" class="btn btn-success"> <i class="bi bi-plus-square"></i> Change</a>
            </div>
        }
        else
        {
            <div class="col text-end pt-1">
                <a asp-controller="Doctor" asp-action="Upsert" class="btn btn-success"><i class="bi bi-plus-square"></i>Choose your doctor</a>
            </div>
        }
    </div>

    <br /><br />

    @*Вместо тблицы просто вставить шаблон html из upsert (Возможно, так будет только для доктора)*@
    @if (Model.doctorProfileDTO != null)
    {
        <div class="row">
            <div class="col-8" enctype="multipart/form-data">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="@Model.appUserDTO.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.appUserDTO.Name" class="form-control" disabled />
                        <span asp-validation-for="@Model.appUserDTO.Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="@Model.appUserDTO.Surname"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.appUserDTO.Surname" class="form-control" disabled />
                        <span asp-validation-for="@Model.appUserDTO.Surname" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="@Model.appUserDTO.Email"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.appUserDTO.Email" class="form-control" disabled />
                        <span asp-validation-for="@Model.appUserDTO.Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="@Model.appUserDTO.Birthday"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.appUserDTO.Birthday" class="form-control" type="date" disabled />
                        <span asp-validation-for="@Model.appUserDTO.Birthday" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="@Model.doctorProfileDTO.Desc"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="@Model.doctorProfileDTO.Desc" class="form-control" disabled />
                        <span asp-validation-for="@Model.doctorProfileDTO.Desc" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @if (Model.doctorProfileDTO != null)
                {
                    <img src="@WC.ImagePath@Model.doctorProfileDTO.PathToPhoto" width="100%" style="border-radius:5px; border:1px solid #bbb" />
                }
            </div>
        </div>
    }
    else
    {
        <p>Choose your doctor first</p>
    }

</div>
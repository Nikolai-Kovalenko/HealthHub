@model HealthHub.Models.ViewModel.ChooseDoctorVM


@{
    string title = "Choose Doctor";
}

<form method="post" asp-action="Upsert">
    <div class="border p-3 bg-black">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        @{
            if (Model.patientDoctorRelation != null)
            {
                title = "Change Doctor";
                <input asp-for="@Model.patientDoctorRelation.Id" hidden />
            }
        }

        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">

                <div class="form-group row py-2">
                    <div class="col-4">
                        <label>Doctor</label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.patientDoctorRelation.DoctorId"
                                asp-items="@Model.doctorProfileList" class="form-select">
                            <option disabled selected>--Select Doctor--</option>
                        </select>
                        <span asp-validation-for="@Model.patientDoctorRelation.DoctorId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            @{
                                if (Model.patientDoctorRelation != null)
                                // Update
                                {
                                    <input type="submit" class="btn btn-success w-100" value="Change" />
                                }
                                else
                                // Create
                                {
                                    <input type="submit" class="btn btn-success w-100" value="Choose" />
                                }
                            }
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info w-100"><i class="fas fa-sign-out-alt"></i>  &nbsp; Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}